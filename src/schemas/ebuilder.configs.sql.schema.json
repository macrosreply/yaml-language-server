        "datasource": {
          "type": "string"
        },
        "jsExpression": {
          "type": "string"
        },
        "placeholders": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/engineTargetString"
          }
        },
        "command": {
          "$ref": "#/definitions/engineTargetString"
        },
        "save": {
          "enum": ["last-insert-id", "output-params", "scalar", "first-row", "all-rows"]
        },
        "extra": {
          "type": "object",
          "properties": {
            "identityCol": {
              "type": "string"
            }
          }
        },
        "checks": {
          "deprecated": true,
          "$ref": "#/definitions/checks"
        },
        "checksAfter": {
          "$ref": "#/definitions/checks"
        },
        "checksBefore": {
          "$ref": "#/definitions/checks"
        },
        "catchErrors": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/mutationResponseWithCallback"
          },
          "propertyNames": {
            "type": "number"
          }
        },
        "stepParams": {
          "$ref": "#/definitions/any"
        },
        "subStepsParams": {
          "$ref": "#/definitions/any"
        },
        "subSteps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/sqlStep"
          }
        },
        "params": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "defaultValue": {
                "$ref": "#/definitions/any"
              }
            }
          }
        },
        "defaultResult": {
          "$ref": "#/definitions/any"
        },
        "task": {
          "type": "string"
        },
        "taskParams": {
          "$ref": "#/definitions/any"
        },
        "mutation": {
          "type": "string"
        },
        "mutationParams": {
          "$ref": "#/definitions/any"
        }
      },
      "required": ["key"],
      "additionalProperties": false
    },
    "engineTargetString": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "if": {
              "type": "string"
            },
            "default": {
              "type": "string"
            },
            "oracle": {
              "type": "string"
            },
            "postgresql": {
              "type": "string"
            },
            "mssql": {
              "type": "string"
            },
            "mysql": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "$ref": "#/definitions/any"
        }
      ]
    },
    "any": {
      "type": ["string", "number", "boolean", "object", "array", "null"]
    },
    "taskOrQuery": {
      "type": "object",
      "properties": {
        "task": {
          "type": "string"
        },
        "query": {
          "type": "string"
        },
        "params": {
          "$ref": "#/definitions/any"
        }
      },
      "additionalProperties": false
    },
    "taskOrMutation": {
      "type": "object",
      "properties": {
        "task": {
          "type": "string"
        },
        "mutation": {
          "type": "string"
        },
        "params": {
          "$ref": "#/definitions/any"
        },
        "checks": {
          "$ref": "#/definitions/checks"
        },
        "checksBefore": {
          "$ref": "#/definitions/checks"
        }
      },
      "additionalProperties": false
    },
    "mutationResponse": {
      "type": "object",
      "properties": {
        "body": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/any"
          }
        },
        "message": {
          "type": "string"
        },
        "statusCode": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "mutationResponseWithCallback": {
      "type": "object",
      "properties": {
        "body": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/any"
          }
        },
        "message": {
          "type": "string"
        },
        "statusCode": {
          "type": "integer"
        },
        "callback": {
          "$ref": "#/definitions/taskOrMutation"
        }
      },
      "additionalProperties": false
    }
  }
}
