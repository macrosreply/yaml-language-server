    "authorize": {
      "type": "object",
      "properties": {
        "policy": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "permissions": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": {
                  "enum": ["Modify", "Show", "Deny"]
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": {
                "enum": ["Modify", "Show", "Deny"]
              }
            }
          ]
        }
      }
    },
    "inputParam": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "type": {
          "enum": ["int", "decimal", "number", "string", "bool", "dateTime", "datetime", "array", "object", "uuid"]
        },
        "items": {
          "$ref": "#/definitions/inputParam"
        },
        "properties": {
          "$ref": "#/definitions/inputParams"
        },
        "rules": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "nullable": {
                    "type": "boolean"
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "enum": {
                    "type": "array",
                    "items": {
                      "type": ["string", "number", "boolean"]
                    }
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "enumFromConstant": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "inputParams": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "$ref": "#/definitions/inputParam"
      }
    },
    "check": {
      "type": "object",
      "properties": {
        "if": {
          "type": "string"
        },
        "param": {
          "$ref": "#/definitions/any"
        },
        "op": {
          "enum": ["equal", "notEqual", "in", "notIn", "defined", "undefined"]
        },
        "value": {
          "$ref": "#/definitions/any"
        },
        "elseThrowErrorCode": {
          "type": "number"
        },
        "throwErrorCode": {
          "type": "number",
          "deprecated": true
        },
        "throw": {
          "type": "string",
          "deprecated": true
        },
        "silentThrow": {
          "type": "boolean",
          "deprecated": true
        }
      },
      "additionalProperties": false
    },
    "checks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/check"
      }
    },
    "sqlStep": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
