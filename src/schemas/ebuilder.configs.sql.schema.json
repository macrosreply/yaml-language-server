{
  "$schema": "http://json-schema.org/draft-06/schema",
  "$id": "https://ebuilder.macrosreply.info/schemas/ebuilder.component.schema.json",
  "title": "eBuilder engine - Configs/Sql schema",
  "description": "eBuilder engine - Configs/Sql schema",
  "type": "object",
  "properties": {
    "query": {
      "type": "object",
      "propertyNames": {
        "pattern": "^query-[a-zA-Z0-9-]+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "inputParams": {
            "$ref": "#/definitions/inputParams"
          },
          "datasource": {
            "type": "string"
          },
          "authorize": {
            "oneOf": [
              {
                "$ref": "#/definitions/authorize"
              },
              {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/authorize"
                }
              }
            ]
          },
          "responseType": {
            "enum": ["list", "single", "singleOrNull", "first", "firstOrNull"]
          },
          "responseTypeErrors": {
            "type": "object",
            "properties": {
              "notFound": {
                "$ref": "#/definitions/mutationResponse"
              },
              "moreThanOne": {
                "$ref": "#/definitions/mutationResponse"
              }
            },
            "additionalProperties": false
          },
          "propType": {
            "type": "object",
            "additionalProperties": {
              "enum": ["string", "bool", "int", "double", "long", "decimal", "json"]
            }
          },
          "hideProps": {
            "type": "object",
            "additionalProperties": {
              "type": ["string", "boolean"]
            }
          },
          "customProps": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/taskOrQuery"
            }
          },
          "pre": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/sqlStep"
            }
          },
          "baseCommand": {
            "type": "string"
          },
          "placeholders": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/engineTargetString"
            }
          },
          "command": {
            "$ref": "#/definitions/engineTargetString"
          }
        },
        "additionalProperties": false
      }
    },
    "mutation": {
      "type": "object",
      "propertyNames": {
        "pattern": "^mutation-[a-zA-Z0-9-]+$"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "inputParams": {
            "$ref": "#/definitions/inputParams"
          },
          "datasource": {
            "type": "string"
          },
          "authorize": {
            "oneOf": [
              {
                "$ref": "#/definitions/authorize"
              },
              {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/authorize"
                }
              }
            ]
          },
          "transactionIsolationLevel": {
            "oneOf": [
              {
                "enum": ["default", "read-committed", "repeatable-read", "serializable"]
              },
              {
                "type": "object",
                "properties": {
                  "default": {
                    "enum": ["default", "read-committed", "repeatable-read", "serializable"]
                  },
                  "oracle": {
                    "enum": ["default", "read-committed", "repeatable-read", "serializable"]
                  },
                  "postgresql": {
                    "enum": ["default", "read-committed", "repeatable-read", "serializable"]
                  },
                  "mssql": {
                    "enum": ["default", "read-committed", "repeatable-read", "serializable"]
                  },
                  "mysql": {
                    "enum": ["default", "read-committed", "repeatable-read", "serializable"]
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "steps": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/sqlStep"
            }
          },
          "response": {
            "$ref": "#/definitions/mutationResponse"
          },
          "command": {
            "$ref": "#/definitions/engineTargetString"
          },
          "placeholders": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/engineTargetString"
            }
          },
          "on": {
            "type": "object",
            "properties": {
              "success": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/taskOrMutation"
                }
              },
              "error": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/taskOrMutation"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
